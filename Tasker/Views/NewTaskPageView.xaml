<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tasker.Views.NewTaskPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:Tasker.Models"
    xmlns:ViewModels="clr-namespace:Tasker.ViewModels"
    Title="Add New Task"
    x:DataType="ViewModels:NewTaskPageViewModel">
    <Grid RowDefinitions=".2*,.7*,.1*">
        <Entry
            Placeholder="Enter New Task"
            Style="{StaticResource Task}"
            Text="{Binding Task}" />
        <CollectionView
            Grid.Row="1"
            Margin="15"
            ItemsSource="{Binding Categories}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout
                    HorizontalItemSpacing="5"
                    Orientation="Vertical"
                    Span="2"
                    VerticalItemSpacing="5" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="Models:Category">
                    <Border Padding="15" StrokeShape="RoundRectangle 10">
                        <RadioButton
                            Content="{Binding CategoryName}"
                            GroupName="Category"
                            IsChecked="{Binding IsSelected}" />
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <HorizontalStackLayout
            Grid.Row="2"
            Margin="10"
            HorizontalOptions="Center"
            Spacing="15"
            VerticalOptions="Center">
            <Button
                Clicked="AddTaskClicked"
                CornerRadius="15"
                Text="Add Task" />
            <Button
                Clicked="AddCategoryClicked"
                CornerRadius="15"
                Text="Add Category" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>